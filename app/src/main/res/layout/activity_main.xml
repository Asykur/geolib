<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_to_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="to search"
        app:layout_constraintEnd_toEndOf="@+id/txt_log"
        app:layout_constraintStart_toStartOf="@+id/txt_log"
        app:layout_constraintTop_toBottomOf="@+id/txt_log" />

    <Button
        android:id="@+id/btn_to_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="to routes"
        app:layout_constraintEnd_toEndOf="@+id/btn_to_search"
        app:layout_constraintStart_toStartOf="@+id/btn_to_search"
        app:layout_constraintTop_toBottomOf="@+id/btn_to_search" />

    <Button
        android:id="@+id/btn_to_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="to maps"
        app:layout_constraintEnd_toEndOf="@+id/btn_to_route"
        app:layout_constraintStart_toStartOf="@+id/btn_to_route"
        app:layout_constraintTop_toBottomOf="@+id/btn_to_route" />

</androidx.constraintlayout.widget.ConstraintLayout>